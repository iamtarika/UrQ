<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NotificationActivity"
    tools:showIn="@layout/activity_notification"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <Switch
        android:id="@+id/sw_alarm"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="เสียงการแจ้งเตือน"
        android:textSize="@dimen/text_size_22"
        android:theme="@style/SCBSwitch"
        />

    <Switch
        android:id="@+id/sw_notification"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="การแจ้งเตือน"
        android:textSize="@dimen/text_size_22"
        android:theme="@style/SCBSwitch"/>

    <TextView
        android:id="@+id/tv_notification_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="25dp"
        android:text="รูปแบบการแจ้งเตือน"
        android:textColor="@color/default_text"
        android:textSize="22dp" />


    <Spinner
        android:id="@+id/sp_setting"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:theme="@style/ThemeSpinner2"
        />

    <Spinner
        android:id="@+id/sp_setting_3"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:theme="@style/ThemeSpinner2"
        />


    <TextView
        android:id="@+id/tv_detail_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="25dp"
        android:text="จำนวนคิวที่ต้องการให้แจ้งก่อนล่วงหน้า"
        android:textSize="22dp"
        android:textColor="@color/default_text"/>

    <EditText
        android:id="@+id/ed_add_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:hint="ระบุจำนวนคิว"
        android:inputType="textPersonName|number"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:theme="@style/ThemeSpinner2"/>

    <TextView
        android:id="@+id/tv_detail_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="25dp"
        android:text="เลือกเวลาที่ต้องการ"
        android:textSize="22dp"
        android:textColor="@color/default_text"/>



    <Spinner
        android:id="@+id/sp_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
android:theme="@style/ThemeSpinner2"
        />


  <!--  <Button
        android:id="@+id/btn_notification_save"
        android:onClick="btnSaveNotification"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="บันทึกการเปลี่ยนแปลง" /> -->

</LinearLayout>