<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="20dp"
    android:background="@color/list_color"
    >

    <TextView
        android:id="@+id/nameReserveStore"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="ชื่อร้าน"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_35" />

    <TextView
        android:id="@+id/tvListView3_1"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:paddingTop="15dp"
        android:textSize="@dimen/text_size_35"
        android:text="เหลืออีก" />

    <TextView
        android:id="@+id/qReserveStore"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="00"
        android:textSize="@dimen/text_size_35" />

    <TextView
        android:id="@+id/tvListView3_2"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:textSize="@dimen/text_size_35"
        android:paddingTop="15dp"
        android:text="คิว" />



</LinearLayout>